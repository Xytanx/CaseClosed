<nav style="position: absolute; top: 0; left: 0; width: 100%; z-index: 10; background-color: rgba(240, 240, 240, 0.9); padding: 10px 20px; display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #ddd;">
    <div class="logo-container" style="display: flex; align-items: center;">
        <a href="/logout-home" style="display: flex; align-items: center; text-decoration: none; color: inherit;">
            <img src="/logo.png" alt="Logo" style="height: 40px; margin-right: 10px;">
            <span style="font-weight: bold;">CaseClosed</span>
        </a>
    </div>
    <ul style="list-style: none; display: flex; margin: 0; padding: 0;">
        <% if (session && session.userId) { %>
            <% if (session.userRole === 'client') { %>
                <li class="dropdown" style="position: relative; display: inline-block; margin-left: 20px;">
                    <a href="/client/profile" style="text-decoration: none; color: #333; padding: 8px 12px; border-radius: 5px; transition: background-color 0.3s ease;"><%= session.firstName %></a>
                    <div class="dropdown-content" style="display: none; position: absolute; background-color: #f9f9f9; min-width: 160px; box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2); z-index: 1;">
                        <a href="/client/dashboard" style="color: black; padding: 12px 16px; text-decoration: none; display: block;">Dashboard</a>
                        <a href="/client/new_request" style="color: black; padding: 12px 16px; text-decoration: none; display: block;">New Request</a>
                        <a href="/client/view_cases" style="color: black; padding: 12px 16px; text-decoration: none; display: block;">View Cases</a>
                        <a href="/client/find_provider" style="color: black; padding: 12px 16px; text-decoration: none; display: block;">Find Provider</a>
                    </div>
                </li>
            <% } else { %>
                <li class="dropdown" style="position: relative; display: inline-block; margin-left: 20px;">
                    <a href="/service_provider/profile" style="text-decoration: none; color: #333; padding: 8px 12px; border-radius: 5px; transition: background-color 0.3s ease;"><%= session.firstName %></a>
                    <div class="dropdown-content" style="display: none; position: absolute; background-color: #f9f9f9; min-width: 160px; box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2); z-index: 1;">
                        <a href="/provider/dashboard" style="color: black; padding: 12px 16px; text-decoration: none; display: block;">Dashboard</a>
                        <a href="/provider/requests" style="color: black; padding: 12px 16px; text-decoration: none; display: block;">Requests</a>
                        <a href="/provider/manage_profile" style="color: black; padding: 12px 16px; text-decoration: none; display: block;">Manage Profile</a>
                    </div>
                </li>
            <% } %>
            <li style="margin-left: 20px;">
                <% if (session.userRole === 'client') { %>
                    <a href="/client" style="text-decoration: none; color: white; padding: 8px 12px; border-radius: 5px; background-color: #d32f2f; transition: background-color 0.3s ease;">Logout</a>
                <% } else { %>
                    <a href="/service_provider/login" style="text-decoration: none; color: white; padding: 8px 12px; border-radius: 5px; background-color: #d32f2f; transition: background-color 0.3s ease;">Logout</a>
                <% } %>
            </li>
        <% } %>
    </ul>
</nav>